{
  "name": "@swizzyweb/swerve",
  "version": "0.5.7",
  "description": "swizzy-swerve is a bootstrapper for swizzy web services. This package will bootstrap and run independent swizzy web services.",
  "main": "dist/index.js",
  "type": "module",
  "files": [
    "./dist",
    "./dist/main.ts",
    "./package.json"
  ],
  "bin": {
    "main.js": "./dist/main.js",
    "swerve": "./dist/bootstrapNode.js",
    "swerven": "./dist/bootstrapNode.js",
    "swerveb": "./dist/bootstrapBun.js",
    "swerved": "./dist/bootstrapDeno.sh",
    "swervec": "./dist/bootstrapNodeCluster.js",
    "swervenc": "./dist/bootstrapNodeCluster.js",
    "swervebc": "./dist/bootstrapBunCluster.js",
    "swervedc": "./dist/bootstrapDenoCluster.js"
  },
  "scripts": {
    "build": "tsc && cp bin/* dist",
    "server:ts": "ts-node ./src/bootstrap.ts",
    "server": "node dist/bootstrap.js",
    "test": "node --test ./test**/*.spec.ts test/*.spec.ts",
    "coverage": "node --test ./test**/*.spec.ts test/*.spec.ts",
    "compile:bun": "bun build src/bootstrapNode.ts --compile --outfile swerveb",
    "compile:deno": "deno compile dist/bootstrapDeno.js"
  },
  "author": "Jason Gallagher",
  "license": "Apache-2.0",
  "devDependencies": {
    "@swizzyweb/express": "^4.19.2",
    "@types/node": "^22.18.6",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@swizzyweb/swerve-manager": "^0.1.8",
    "@swizzyweb/swizzy-common": "^0.3.2",
    "@swizzyweb/swizzy-web-service": "^0.5.4",
    "bun": "^1.2.22",
    "deno": "^2.5.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/swizzyweb/swerve.git"
  },
  "keywords": [
    "swizzy",
    "dyn",
    "serve",
    "bootsrap",
    "web",
    "service",
    "runner"
  ],
  "bugs": {
    "url": "https://github.com/swizzyweb/swerve/issues"
  },
  "homepage": "https://github.com/swizzyweb/swerve#readme"
}
